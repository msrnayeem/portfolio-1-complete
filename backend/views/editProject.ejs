<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body class="container mt-5">
    <h1>Edit Project</h1>

    <form action="/ejs/projects/update/<%= project._id %>" method="POST" onsubmit="return validateForm()">
        <div class="mb-3">
            <label for="projectName" class="form-label">Project Name</label>
            <input type="text" class="form-control" id="projectName" name="projectName"
                value="<%= project.projectName %>" required>
            <div class="invalid-feedback">Please enter a valid project name.</div>
        </div>

        <div class="mb-3">
            <label for="projectStack" class="form-label">Project Stack</label>
            <input type="text" class="form-control" id="projectStack" name="projectStack"
                value="<%= project.projectStack %>" required>
            <div class="invalid-feedback">Please enter a valid project stack.</div>
        </div>

        <div class="mb-3">
            <label for="projectDetails" class="form-label">Project Details</label>
            <textarea class="form-control" id="projectDetails" name="projectDetails" rows="3"
                required><%= project.projectDetails %></textarea>
            <div class="invalid-feedback">Please enter valid project details.</div>
        </div>

        <button type="submit" class="btn btn-primary btn-sm">Update Project</button>
        <a href="/ejs/projects" class="btn btn-sm btn-secondary">Cancel</a>
    </form>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script>
        function validateForm() {
            const projectName = document.getElementById('projectName').value;
            const projectStack = document.getElementById('projectStack').value;
            const projectDetails = document.getElementById('projectDetails').value;

            if (projectName.trim() === '' || typeof projectName !== 'string' ||
                projectStack.trim() === '' || typeof projectStack !== 'string' ||
                projectDetails.trim() === '' || typeof projectDetails !== 'string') {
                alert('Please enter valid project information.');
                return false;
            }

            return true;
        }
    </script>
</body>

</html>